#carousel-container
  #myCarousel.carousel.slide data-ride="carousel" 
    .carousel-inner
      .item.active
        =image_tag ("nm_hero.png"), :class => "pfl_cover", :id => 'pfl_cover'
      .item
        =image_tag ("family_nm.png"), :class => "pfl_cover" , :id => 'pfl_cover'
      .item
        =image_tag ("office_nm.png"), :class => "pfl_cover" , :id => 'pfl_cover'
    /! Left and right controls
    a.left-nm.carousel-control data-slide="prev" href="#myCarousel" 
      span.glyphicon.glyphicon-chevron-left
      span.sr-only Previous
    a.right-nm.carousel-control data-slide="next" href="#myCarousel" 
      span.glyphicon.glyphicon-chevron-right
      span.sr-only Next
